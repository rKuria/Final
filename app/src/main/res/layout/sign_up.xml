<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FBF9F9"
    android:backgroundTint="#FDFDFD"
    android:textAlignment="center">

    <TextView
        android:id="@+id/sign_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="156dp"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-black"
        android:text="Sign Up"
        android:textSize="28sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sign_icon" />

    <EditText
        android:id="@+id/nameValue"
        android:layout_width="285dp"
        android:layout_height="61dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="@string/PutName"
        android:inputType="text"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sign_text" />

    <EditText
        android:id="@+id/passwordValue"
        android:layout_width="285dp"
        android:layout_height="61dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="2dp"
        android:ems="10"
        android:hint="@string/PutPassword"
        android:inputType="textPassword"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailValue" />

    <Button
        android:id="@+id/button"
        android:layout_width="151dp"
        android:layout_height="55dp"
        android:layout_marginStart="128dp"
        android:layout_marginTop="80dp"
        android:backgroundTint="@color/lilac"
        android:text="Sign Up"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passwordValue" />

    <EditText
        android:id="@+id/emailValue"
        android:layout_width="285dp"
        android:layout_height="61dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="@string/PutEmail"
        android:inputType="textEmailAddress"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameValue" />

    <ImageView
        android:id="@+id/sign_icon"
        android:layout_width="149dp"
        android:layout_height="124dp"
        android:layout_marginStart="128dp"
        android:layout_marginTop="4dp"
        android:drawableLeft="@drawable/baseline_person_outline_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon" />

    <ImageView
        android:id="@+id/name_icon"
        android:layout_width="32dp"
        android:layout_height="61dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="203dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toStartOf="@+id/nameValue"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/baseline_person_outline_24" />

    <ImageView
        android:id="@+id/email_icon"
        android:layout_width="29dp"
        android:layout_height="62dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toStartOf="@+id/emailValue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name_icon"
        app:srcCompat="@drawable/baseline_email_24" />

    <ImageView
        android:id="@+id/password_icon"
        android:layout_width="31dp"
        android:layout_height="25dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="19dp"
        app:layout_constraintEnd_toStartOf="@+id/passwordValue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email_icon"
        app:srcCompat="@drawable/baseline_password_24" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="32dp"
        android:layout_height="28dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password_icon"
        app:srcCompat="@drawable/baseline_password_24" />

    <EditText
        android:id="@+id/password_2"
        android:layout_width="285dp"
        android:layout_height="61dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="36dp"
        android:ems="10"
        android:hint="@string/ReenterPass"
        android:inputType="textPassword"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintStart_toEndOf="@+id/imageView8"
        app:layout_constraintTop_toBottomOf="@+id/passwordValue" />

    <Switch
        android:id="@+id/user"
        android:layout_width="169dp"
        android:layout_height="69dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="16dp"
        android:text="admin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button" />

</androidx.constraintlayout.widget.ConstraintLayout>